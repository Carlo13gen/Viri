RANLIB = ranlib

 
# -----------------------------------------------------------
# choose (uncomment) one of the following compilation options
# -----------------------------------------------------------

CUSTOM_CFLAGS= -O3 -DNDEBUG #maximum optimized code without debugging information (default)

